func min<Num T>(T a, T b) T def
    return a < b ? a : b

func max<Num T>(T a, T b) T def
    return b < a ? a : b

func clamp<Num T>(T x, T a, T b) T def
    y = x < a ? a : x
    z = y > b ? b : y
    return z

func abs<Num T>(T x) T def
    return x >= 0 ? x : -x

func sign<Num T>(T x) Int def
    return x > 0 ? 1 : x < 0 ? -1 : 0


func Int_pow(Int b, Int e) Int def
    if e < 0 do
        return 0
    r = 1
    while e > 0 do
        if e % 2 > 0 do
            r *= b
        b *= b
        e >>= 1
    return r

